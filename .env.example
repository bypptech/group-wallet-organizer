# ============================================
# Database Configuration (Neon PostgreSQL)
# ============================================
# Get your Neon database URL from: https://console.neon.tech/
# Format: postgresql://user:password@host/database?sslmode=require
DATABASE_URL=postgresql://your_username:your_password@your_host.neon.tech/your_database?sslmode=require
NEON_DATABASE_URL=postgresql://your_username:your_password@your_host.neon.tech/your_database?sslmode=require

# ============================================
# Base Sepolia RPC Configuration
# ============================================
# Get your Alchemy API Key from: https://dashboard.alchemy.com/
VITE_ALCHEMY_API_KEY=YOUR_ALCHEMY_API_KEY
BASE_SEPOLIA_RPC_URL=https://base-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
RPC_URL=https://base-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# ============================================
# WalletConnect Configuration
# ============================================
# Get your WalletConnect Project ID from: https://cloud.walletconnect.com/
VITE_WALLETCONNECT_PROJECT_ID=YOUR_WALLETCONNECT_PROJECT_ID

# ============================================
# Smart Contract Addresses (Base Sepolia)
# ============================================
# These will be populated after contract deployment
ESCROW_REGISTRY_ADDRESS=
ESCROW_EXECUTOR_ADDRESS=
PAYMASTER_ADDRESS=
VITE_ESCROW_REGISTRY_ADDRESS=
VITE_POLICY_MANAGER_ADDRESS=
VITE_ROLE_VERIFIER_ADDRESS=
VITE_PAYMASTER_ADDRESS=

# ============================================
# Private Keys (for development only - NEVER commit real keys!)
# ============================================
EXECUTOR_PRIVATE_KEY=

# ============================================
# API Server Configuration
# ============================================
PORT=3001
JWT_SECRET=dev-secret-key-change-in-production
WEB_ORIGIN=http://localhost:5000
NODE_ENV=development

# ============================================
# Chain Configuration
# ============================================
CHAIN_ID=84532
VITE_DEFAULT_CHAIN_ID=84532
VITE_TESTNET_CHAIN_ID=84532

# ============================================
# Bundler & Paymaster Configuration
# ============================================
# Get your Pimlico API key from: https://dashboard.pimlico.io/
BUNDLER_URL=https://api.pimlico.io/v2/84532/rpc?apikey=YOUR_PIMLICO_API_KEY
VITE_BUNDLER_RPC_URL=https://api.pimlico.io/v2/84532/rpc?apikey=YOUR_PIMLICO_API_KEY
VITE_PAYMASTER_RPC_URL=https://api.pimlico.io/v2/84532/rpc?apikey=YOUR_PIMLICO_API_KEY
VITE_ALCHEMY_GAS_POLICY_ID=

# ============================================
# Subgraph Configuration
# ============================================
SUBGRAPH_URL=
VITE_SUBGRAPH_URL=
VITE_SUBGRAPH_API_KEY=

# ============================================
# Development Mode Settings
# ============================================
# Set to 'true' to use mock data instead of real database
USE_MOCK_DATA=false

# ============================================
# Frontend Environment Variables
# ============================================
# API URL - defaults to localhost in code, but can be set explicitly
VITE_API_URL=http://localhost:3001/api
VITE_RPC_URL=
