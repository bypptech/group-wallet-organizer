{
  "name": "@repo/api",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "@neondatabase/serverless": "^1.0.2",
    "@octokit/core": "^7.0.5",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.44.5",
    "ethers": "^6.13.0",
    "graphql": "^16.8.1",
    "graphql-request": "^7.1.0",
    "hono": "^4.5.6",
    "jose": "^5.9.3",
    "merkletreejs": "^0.6.0",
    "uuid": "^13.0.0",
    "viem": "^2.21.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^24.6.2",
    "@vitest/ui": "^3.2.4",
    "drizzle-kit": "^0.31.5",
    "esbuild": "^0.25.10",
    "pg": "^8.16.3",
    "vitest": "^3.2.4",
    "vitest-mock-extended": "^3.1.0",
    "wrangler": "^4.42.0"
  },
  "scripts": {
    "dev": "NODE_ENV=development PORT=3001 tsx src/server-hono.ts",
    "build": "esbuild src/server-hono.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "build:cloudflare": "esbuild src/server-cloudflare.ts --platform=neutral --packages=external --bundle --format=esm --outdir=dist",
    "start": "NODE_ENV=production node dist/server-hono.js",
    "deploy:cloudflare": "pnpm build:cloudflare && wrangler deploy",
    "deploy:cloudflare:dev": "pnpm build:cloudflare && wrangler deploy --env dev",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  }
}
